# Stage 1: Build the application
FROM node:20-alpine AS builder

WORKDIR /app

COPY package.json package-lock.json ./
RUN npm ci

COPY . .

ARG VITE_SUPABASE_URL
ARG VITE_SUPABASE_KEY
ARG VITE_USER_SERVICE
ARG VITE_MATCHING_SERVICE
ARG VITE_DRIVER_SERVICE
ARG VITE_STATION_SERVICE

ENV VITE_SUPABASE_URL=$VITE_SUPABASE_URL
ENV VITE_SUPABASE_KEY=$VITE_SUPABASE_KEY
ENV VITE_USER_SERVICE=$VITE_USER_SERVICE
ENV VITE_MATCHING_SERVICE=$VITE_MATCHING_SERVICE
ENV VITE_DRIVER_SERVICE=$VITE_DRIVER_SERVICE
ENV VITE_STATION_SERVICE=$VITE_STATION_SERVICE

RUN npm run build


FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]